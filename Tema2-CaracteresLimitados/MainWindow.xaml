                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox x:Name="textoIntroducidoTextBox" HorizontalAlignment="Left" Height="326" Margin="95,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="600" TextChanged="textoIntroducidoTextBox_TextChanged" AcceptsReturn="True"/>
        <TextBlock x:Name="contadorTextBlock" HorizontalAlignment="Left" Margin="686,389,0,0" TextWrapping="Wrap" Text="0 / 140" VerticalAlignment="Top" RenderTransformOrigin="0.792,-0.588"/>
    </Grid>
</Window>
